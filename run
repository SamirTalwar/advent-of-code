#!/usr/bin/env zsh

set -e

if [[ ! ( $1 =~ '^[0-9]+$' ) ]]; then
  echo >&2 "Usage: $0 <day>"
  exit 2
fi

day=$(printf '%02d' $1)

program="AOC_${day}.hs"
input="AOC_${day}.input"

if [[ ! -e $program ]]; then
  echo "${program} does not exist."
  exit 1
fi

if [[ -t 0 ]]; then
  if [[ ! -e $input ]]; then
    echo "${input} does not exist."
    exit 1
  fi

  stack exec runhaskell $program < $input
else
  stack exec runhaskell $program
fi
