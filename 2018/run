#!/usr/bin/env nix-shell
#!nix-shell -i zsh ./shell.nix

set -e
set -u
set -o pipefail

cd $(dirname $0)

optimize=false
while [[ $1 =~ ^- ]]; do
  case $1 in
    -O)
      optimize=true
      shift
      ;;
  esac
done

day=$(printf '%02d' $1)
shift
if [[ $# -gt 0 ]]; then
  part=${1:-}
  shift
fi

output_directory="${PWD}/build"
if (( ${+part} )); then
  name="AOC_${day}_${part}"
else
  name="AOC_${day}"
fi

mkdir -p $output_directory

files=("${name}.swift" Helpers/*.swift)
executable="${output_directory}/${name}"
if $optimize; then
  compilation_args=('-O')
else
  compilation_args=()
fi

(
  swiftformat $files
  swiftc $compilation_args -o $executable $files
  echo 'Compiled.'
  echo
) >&2

time $executable $@
