#!/usr/bin/env nix-shell
#!nix-shell -i zsh ./shell.nix

set -e
set -u
set -o pipefail

dir=$(dirname $0)
year=$(basename $dir)

optimize=false
while [[ $1 =~ ^- ]]; do
  case $1 in
    -O)
      optimize=true
      shift
      ;;
  esac
done

day=$(printf '%02d' $1)
shift
if [[ $# -gt 0 ]]; then
  part=${1:-}
  shift
fi

output_directory="build/${year}"
if (( ${+part} )); then
  name="AOC_${day}_${part}"
else
  name="AOC_${day}"
fi

haskell_args=('-Wall')
if $optimize; then
  files=("${dir}/${name}.hs" ${dir}/Helpers/*.hs)
  output_directory="${output_directory}/${name}"
  mkdir -p $output_directory
  executable="${output_directory}/run"
  (
    ormolu -i $files
    hlint $files || :
    ghc \
      $haskell_args \
      -O2 \
      -o $executable \
      -odir $output_directory \
      -hidir $output_directory \
      $files
    echo
  )>&2
  time $executable $@
else
  (
    cd $dir
    file="${name}.hs"
    files=($file Helpers/*.hs)
    (
      ormolu -i $files
      hlint $files || :
      echo
    ) >&2
    time runhaskell $haskell_args $file
  )
fi
