#!/usr/bin/env nix-shell
#!nix-shell -i zsh ./shell.nix

set -e
set -u
set -o pipefail

cd $(dirname $0)

optimize=false
while [[ $1 =~ ^- ]]; do
  case $1 in
    -O)
      optimize=true
      shift
      ;;
  esac
done

day=$(printf '%02d' $1)
shift
if [[ $# -gt 0 ]]; then
  part=${1:-}
  shift
fi

output_directory="${PWD}/build"
if (( ${+part} )); then
  name="AOC_${day}_${part}"
else
  name="AOC_${day}"
fi

if $optimize; then
  file="${name}.hs"
  output_directory="${output_directory}/${name}"
  mkdir -p $output_directory
  executable="${output_directory}/run"
  (
    ormolu -i $file
    ghc \
      -O2 \
      -o $executable \
      -odir $output_directory \
      -hidir $output_directory \
      $file
    echo
  )>&2
  time $executable $@
else
  file="${name}.hs"
  ormolu -i $file >&2
  time runhaskell $file
fi
